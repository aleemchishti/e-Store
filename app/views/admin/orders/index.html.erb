<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<button type="button" class="btn btn-secondary">Orders</button>

<table>
	<thead>
<table class="table table-dark table-striped">
		<tr class="w3-hover-green">
		<th>Customer Name</th>
		<th>Customer Address</th>
		<th>Payment Method</th>
		<th>Processing Time</th>
		<th>Comments</th>
		<th>Status</th>
		<th colspan = '3'>Actions</th>
	</thead>
	<body>
	<% @orders.each do |order| %>
		<tr class="w3-hover-green">
			<td> <%= order.customer_name %> </td>
			<td> <%= order.customer_address %> </td>
			<td> <%= order.payment_method %> </td>
			<td> <%= order.processing_time %> </td>
			<td> <%= order.comments %> </td>
			<td> <%= order.status %> </td>
			<td><%= link_to 'View', admin_order_url(order)%></td>
			<td><%= link_to 'Edit', edit_admin_order_url(order)%></td>
			<td><%= link_to "Delete", admin_order_url(order), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
		<% end %>	
	</body>
</table>
