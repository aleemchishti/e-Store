<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div class="row">
		<div>
			<%= link_to 'Back',admin_products_path, class: 'btn btn-primary' %>
		</div>
	</div>

<table>
	<thead>
		<table class="w3-table-all">
		<tr class="w3-light-grey w3-hover-grey">
		<th>Customer ID</th>
		<th>Customer Name</th>
		<th>Shipping Address</th>
		<th>Order Amount</th>
		<th>Order Email</th>
		<th>Order Date</th>
		<th>Status</th>
		<th colspan = '3'>Actions</th>
	</thead>
	<body>
	<% @orders.each do |order| %>
		<tr class="w3-hover-grey">
			<td><%=order.customer_id%></td>
			<td><%=order.customer_name%></td>
			<td><%=order.shipping_address%></td>
			<td><%=order.order_amount%></td>
			<td><%=order.order_email%></td>
			<td><%=order.order_date%></td>
			<td><%=order.status %></td>
			<td><%= link_to 'View', admin_order_url(order), class: 'btn btn-secondary'%></td>
			<td><%= link_to 'Delete', admin_order_url(order), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %></td>
		<% end %>	
	</body>
</table>
