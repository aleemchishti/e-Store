<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<%= form_for [:admin, @customer] do |form| %>
  <div class="mb-3">
  	<%= form.label :full_name, class: "form-label"%><br>
  	<%= form.text_field :full_name, class: "form-control"%>
  </div>
  <div class="mb-3">
  	<%= form.label :billing_address, class: "form-label"%><br>
  	<%= form.text_field :billing_address, class: "form-control"%>
  </div>
  <div class="mb-3">
  	<%= form.label :email, class: "form-label"%><br>
  	<%= form.text_field :email, class: "form-control"%>
  </div>

  <div class="mb-3">
  	<%= form.label :password, class: "form-label"%><br>
  	<%= form.text_field :password, class: "form-control"%>
  </div>
    <div class="mb-3">
  	<%= form.label :default_shipping_address, class: "form-label"%><br>
  	<%= form.text_field :default_shipping_address, class: "form-control"%>
  </div>
    <div class="mb-3">
  	<%= form.label :country, class: "form-label"%><br>
  	<%= form.text_field :country, class: "form-control"%>
  </div>
    <div class="mb-3">
  	<%= form.label :phone, class: "form-label"%><br>
  	<%= form.text_field :phone, class: "form-control"%>
  </div>
  <%= form.submit class: "btn btn-primary"%>
  <%= link_to 'Back', admin_customers_path, class: "btn btn-secondary"%>
<% end %>

