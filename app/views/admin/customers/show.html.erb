<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div class="container-fluid">
<h1><%=@customer.full_name%></h1>
<div class="row">
	<div class="col-md-4">
		<p><strong>Name</strong><br><%=@customer.full_name%></p>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
		<p><strong>Billing Address</strong><br><%=@customer.billing_address%></p>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
		<p><strong>Email</strong><br><%=@customer.email%></p>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
		<p><strong>Password</strong><br><%=@customer.password%></p>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
		<p><strong>Default Shipping Address</strong><br><%=@customer.default_shipping_address%></p>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
		<p><strong>Country</strong><br><%=@customer.country%></p>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
		<p><strong>Phone</strong><br><%=@customer.phone%></p>
	</div>
</div>
<div class="row">
  	<div>
	<%= link_to "Edit", edit_admin_customer_path, class: 'btn btn-secondary'%>
	</div>
</div>
<div class="row">
  	<div>
	<%= link_to "Back", admin_customers_path, class: 'btn btn-primary'%>
	</div>
</div>
</div>