<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<h1>Customers</h1>

	<div class="row">
		<div>
			<%= link_to 'Back',admin_products_path, class: 'btn btn-primary' %>
		</div>
	</div>
	<table>
		<thead>
			<table class="w3-table-all">
			<tr class="w3-light-grey w3-hover-grey">
				<th>Name</th>
				<th>Billing Address</th>
				<th>Email</th>
				<th>Password</th>
				<th>Default Shipping Address</th>
				<th>Country</th>
				<th>Phone</th>
				<th colspan = '3'>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @customers.each do |customer| %>
			<tr class="w3-hover-grey">
				<td> <%= customer.full_name %> </td>
				<td> <%= customer.billing_address %> </td>
				<td> <%= customer.email %> </td>
				<td> <%= customer.password%> </td>
				<td> <%= customer.default_shipping_address %> </td>
				<td> <%= customer.country%> </td>
				<td> <%= customer.phone%> </td>
				<td><%= link_to 'View', admin_customer_url(customer), class: 'btn btn-secondary'%></td>
				<td><%= link_to 'Edit', edit_admin_customer_url(customer), class: 'btn btn-warning' %></td>
				<td><%= link_to 'Delete', admin_customer_url(customer), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %></td>
			</tr>
			<% end %>
		</tbody>
	</table> 


