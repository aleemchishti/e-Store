<%= form_for [:admin, product] do |form| %>

<div>
	<%= form.label :name%><br>
	<%= form.text_field :name%>
</div>
<div>
	<%= form.label :description%><br>
	<%= form.text_field :description%>
</div>
<div>	
	<%= form.label :stock%><br>
	<%= form.number_field :stock, min: 0 %>
</div>
<div>
	<%= form.label :sku%><br>
	<%= form.text_field :sku%>
</div>
<div>
	<%= form.label :price%><br>
	<%= form.number_field :price%>
</div>
	<%= form.label :weight%><br>
	<%= form.text_field :weight%>
</div>
</div>
	<%= form.label :create_date%><br>
	<%= form.text_field :create_date%>
</div>
</div>
	<%= form.label :category%><br>
	<%= form.text_field :category%>
</div>
<div>
	<%= form.submit%>
</div>

<% end %>

