
<%= form_for [:admin, product] do |form| %>

<div>
	<%= form.label :name%><br>
	<%= form.text_field :name%>
</div>
<div>
	<%= form.label :description%><br>
	<%= form.text_field :description%>
</div>
<div>	
	<%= form.label :quantity%><br>
	<%= form.number_field :quantity, min: 0 %>
</div>
<div>
	<%= form.label :barcode%><br>
	<%= form.text_field :barcode%>
</div>
<div>
	<%= form.label :price%><br>
	<%= form.number_field :price%>
</div>
	<%= form.label :category_name%><br>
	<%= form.text_field :category_name%>
</div>
<div>
	<%= form.submit%>
</div>

<% end %>

